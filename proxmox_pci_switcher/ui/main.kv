MDBoxLayout:
    orientation: "vertical"
    MDToolbar:
        title: "Proxmox PCI Switcher"
        left_action_items: [["menu", lambda x: app.callback()]]
        right_action_items: [["brightness-4", lambda x: app.theme_switch()], ["refresh", lambda x: app.refresh()]]
    ScrollView:
        MDList:
            id: container